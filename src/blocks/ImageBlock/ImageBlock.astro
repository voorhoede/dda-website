---
import type { ImageBlockFragment } from '@lib/types/datocms';
import Image from './Image.astro';

export interface Props {
  block: ImageBlockFragment;
  showTitle?: boolean;
  priority?: boolean;
}

const { block, showTitle = true, priority } = Astro.props;
---

<Image image={block.image} showTitle={showTitle} loading={priority && 'eager'} />
