---
import { t } from '@lib/i18n';
import '@assets/a11y.css';

interface Props {
  targetId: string;
}
const { targetId } = Astro.props;
---

<a href={`#${targetId}`} class="a11y-kb-only" datocms-no-index="">
  <slot>{t('skip_to_content')}</slot>
</a>

<style>
  a:focus {
    position: absolute;
    z-index: var(--z-index-skip-link);
  }
</style>
